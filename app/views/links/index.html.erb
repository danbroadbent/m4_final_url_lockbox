<div id="link-errors"></div>

<h2>Filters:</h2>
<p class="filters">
  <input type="text" id='search-box' placeholder="Search by URL" />
  <button type="button" id='all-read-button'>Show All Read</button>
  <button type="button" id='all-unread-button'>Show All Unread</button>
</p>

<h2>Create New Link</h2>
<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<div id="links-list"></div>

<h2>Hot Reads!</h2>
<ol id="hot-reads">
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read.url %>"><%= read.url %></a>
  </li>
<% end %>
</ol>
